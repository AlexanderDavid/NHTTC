{
	"build": {
		"dockerfile": "Dockerfile"
	},

	"workspaceMount": "source=${localWorkspaceFolder},target=/opt/nhttc_ws/src/nhttc,type=bind",
	"workspaceFolder": "/opt/nhttc_ws/src/nhttc",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"ms-python.python",
				"ms-python.isort",
				"ms-iot.vscode-ros",
				"twxs.cmake"
			]
		}
  	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
